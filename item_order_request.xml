<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/foodImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/orderIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/foodImageView"
        android:layout_marginStart="16dp"
        android:text="Order ID"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/userIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/foodImageView"
        android:layout_below="@id/orderIdTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="User ID"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/foodImageView"
        android:layout_below="@id/userIdTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Status"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/foodImageView"
        android:layout_below="@id/statusTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Message"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/approveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/foodImageView"
        android:layout_below="@id/messageTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Approve"/>

    <Button
        android:id="@+id/disapproveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/approveButton"
        android:layout_below="@id/messageTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Disapprove"/>
</RelativeLayout>
